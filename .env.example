# Solana RPC endpoint (Devnet by default)
# Use https://api.devnet.solana.com for development
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com

# LazorKit SDK Configuration
# Required for @lazorkit/wallet SDK integration

# Solana RPC endpoint for LazorKit SDK
# Default: https://api.devnet.solana.com (Devnet)
# Production: Use your own RPC endpoint or Mainnet URL
NEXT_PUBLIC_LAZORKIT_RPC_URL=https://api.devnet.solana.com

# LazorKit Portal URL for passkey credential management
# Default: https://portal.lazor.sh
# This endpoint handles WebAuthn credential registration and authentication
NEXT_PUBLIC_LAZORKIT_PORTAL_URL=https://portal.lazor.sh

# LazorKit Paymaster URL for gasless transactions
# Default: https://lazorkit-paymaster.onrender.com
# This service sponsors transaction fees for gasless operations
NEXT_PUBLIC_LAZORKIT_PAYMASTER_URL=https://lazorkit-paymaster.onrender.com

# Lazorkit API configuration (optional)
# Get your API key from the Lazorkit dashboard if required
NEXT_PUBLIC_LAZORKIT_API_KEY=your_api_key_here

# USDC Devnet mint address
# This is the official USDC mint address on Solana Devnet
NEXT_PUBLIC_USDC_MINT=4zMMC9srt5Ri5X14GAgXhaHii3GnPAEERYPJgZJDncDU

# Solana Explorer base URL
# Used for linking to transaction details
NEXT_PUBLIC_EXPLORER_URL=https://explorer.solana.com
